<%- include("content/header.ejs") %>

<style>
    .card {
        margin-bottom: 1rem;
    }
    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }
    .card-text {
        font-size: 1rem;
        color: black;
    }
    .card-header {
        color: white;
    }
    .no-events {
        text-align: center; /* Center the message */
        font-size: 1.2rem; /* Slightly larger text for emphasis */
        margin-top: 2rem; /* Add some space above */
        color: #555; /* Dimmed color for a softer look */
    }
</style>

<h1 class="mb-4">Completed Notes</h1>
<!-- <pre><%= JSON.stringify(events, null, 2) %></pre> Debug output -->
<div class="row">
    <% if (events && events.length > 0) { %>
        <% events.forEach(event => { %>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header" style="background-color: <%= event.colorId ? CATEGORY_COLORS[event.colorId] || '#007bff' : '#007bff' %>;">
                        <%= event.summary %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= event.summary %></h5>
                        <p class="card-text">
                            <strong>Start:</strong> <%= formatDateTime(event.start.dateTime || event.start.date)  %><br>
                            <strong>End:</strong> <%= formatDateTime(event.end.dateTime || event.end.date)  %><br>
                            <strong>Description:</strong> <%= event.description.replace("CreatedFromWebpage", "") %>
                        </p>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12 no-events">
            <p>No completed notes available.</p>
        </div>
    <% } %>
</div>
