<%
// Server-side function to format the date and time
function formatDate(dateTime) {
    const options = { 
        year: 'numeric', 
        month: '2-digit', 
        day: '2-digit', 
        hour: '2-digit', 
        minute: '2-digit', 
        hour12: false 
    };
    const date = new Date(dateTime);
    return date.toLocaleString('en-US', options).replace(',', ''); // Format to local string and remove the comma
} %>